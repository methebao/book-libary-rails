<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    
    <%= form_group_for f, :username, label: false  do %>
      <label>Username: </label>
      <%= f.file_field :username, autofocus: true, :required => true %>
    <% end %>  
    <%= form_group_for f, :name, label: false  do %>
      <label>Name: </label>
      <%= f.file_field :name, :required => true %>
    <% end %>  
    <%= form_group_for f, :email, label: false  do %>
      <label>Email: </label>
      <%= f.email_field :email, autocomplete: "email", :required => true %>
    <% end %>  
      <div class="mb-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
    <%= form_group_for f, :title, label: false  do %>
      <label>Password: </label>
      <%= f.password_field :password, autocomplete: "new-password", class:"input", :required => true %>
      <p class="text-sm text-grey-dark pt-1 italic"> <% if @minimum_password_length %>
        <%= @minimum_password_length %> characters minimum <% end %> (leave blank if you don't want to change it) </p>
    <% end %>  
     <%= form_group_for f, :password_confirmation, label: false  do %>
      <label>Confirm your password : </label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", :required => true %>
    <% end %>  
  
     <%= form_group_for f, :current_password, label: false  do %>
      <label>Current_password : </label>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" :required => true %>
      <p class="text-sm text-grey-dark pt-2 italic">(we need your current password to confirm your changes)</p>  
      <% end %>  

    <div class="mt-4">
      <%= f.submit "Update", class: "btn btn-dark" %>
    </div>
    <% end %>

    <h3 class="heading text-xl font-bold mb-4">Cancel my account</h3>

    <div class="flex justify-between items-center">
      <div class="flex-1"><p class="py-4">Unhappy?</p></div>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-default" %>
    </div>

<% end %>

<%= render 'devise/shared/form_wrap' %>


