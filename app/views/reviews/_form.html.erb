<%= form_for([@book, @book.reviews.build]) do |f| %>
  <%= form_group_for f, :rate, label: false  do %>
    <div id="rating-form" class='new-review__form average-review-rating rating-box'>
      <label>Rating: </label>   
    </div>
  <% end %>  
  <%= form_group_for f, :description, label: false  do %>
    <label>Comment: </label>
    <%= f.text_field :description, class: 'form-control', :required => true %>
  <% end %> 
  <%= f.button :Submit, class: "btn btn-dark mt-5" %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rate]'
  });
</script>