<div class="col-md-6 col-md-offset-3">
  <div class="edit-review-form">
    <h1>Edit Review</h1>
    <%= form_for([@book, @review]) do |f| %>
      <div id="rating-form">
        <label>Rating</label>
      </div>
      <%= f.text_field :description %>
      <%= f.button :submit, class: "btn-custom2" %>
    <% end %>
  </div>
</div>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rate]'
  });
</script>