<div class="col-md-6 col-md-offset-3">
  <div class="edit-review">
    <h1>Edit Review</h1>
    <%= form_for([@book, @review]) do |f| %>
      <div id="rating-form" class="edit-review__form average-review-rating rating-box">
        <label>Rating</label>
      </div>
    <label>Comment: </label>
    <%= f.text_field :description, class: 'form-control' %>
    <%= f.button :Submit, class: "btn btn-dark mt-5" %>
    <% end %>
  </div>
</div>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rate]'
  });
</script>