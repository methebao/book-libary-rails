<div class="col-md-6 col-md-offset-3">
  <div class="edit-book">
    <h1>Edit Book</h1>
    <%= form_for @book, :html => { :multipart => true } do |f| %>
      <%= f.file_field :thumbnail, :required => true %><br>
      <%= form_group_for f, :title, label: false  do %>
        <label>Title: </label>
        <%= f.file_field :title, :required => true %>
      <% end %>  
      <label>Description: </label>
      <%= f.text_field :description, class: 'form-control' %><br>
      <label>Author: </label>
      <%= f.text_field :author, class: 'form-control' %><br>
      <%= f.button :submit, class: "btn btn-dark" %>
    <% end %>
  </div>
</div>